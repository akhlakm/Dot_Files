proc distanceByIndex {ind1 ind2} {
  set start [lindex [[atomselect top "index $ind1"] get {x y z}] 0]
  set end [lindex [[atomselect top "index $ind2"] get {x y z}] 0]
  return [veclength [vecsub $end $start]]
}

